generator client {
  provider = "prisma-client-js"
}

enum Role {
  user
  admin
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id_usuario Int @id @default(autoincrement())
  nombre String?
  apellido String?
  correo String? @unique
  clave String?
  telefono String?
  direccion String?
  localidad String?
  role Role @default(user)
}


model Producto {
  id_producto Int @id @default(autoincrement())
  nombre String
  descripcion String
  imagen String
  precio Float
  cantidad Int
}

model Pedido {
  id_pedido Int @id @default(autoincrement())
  id_usuario Int
  id_producto Int
  cantidad Int
  fecha DateTime
  metodo_pago String
  estado String
  precio_final Float
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@unique([identifier, token])
}

