// Generador de cliente
generator client {
  provider = "prisma-client-js"
}

// Fuente de datos
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Modelo de Producto
model Producto {
  id_producto  Int @id @default(autoincrement())
  nombre       String
  descripcion  String
  imagen       String
  precio       Float
  cantidad     Int
  pedidos      PedidoProducto[]  // Relación con la tabla intermedia
}

// Modelo de Pedido
model Pedido {
  id_pedido     Int @id @default(autoincrement())
  id_usuario    Int
  fecha         DateTime
  metodo_pago   String
  estado        String
  precio_final  Float    // Precio total después de descuentos y recargos
  recargos      Float    // Cualquier recargo adicional
  descuentos    Float    // Cualquier descuento aplicado
  productos     PedidoProducto[]  // Relación con la tabla intermedia
  usuario       Usuario   @relation(fields: [id_usuario], references: [id_usuario]) // Relación con Usuario
}

// Modelo intermedio para la relación muchos a muchos
model PedidoProducto {
  id_pedido    Int
  id_producto  Int
  cantidad     Int  // Cantidad del producto en el pedido
  pedido       Pedido  @relation(fields: [id_pedido], references: [id_pedido])
  producto     Producto @relation(fields: [id_producto], references: [id_producto])
  
  @@id([id_pedido, id_producto])  // Llave compuesta
}

// Modelo de Usuario
model Usuario {
  id_usuario       Int @id @default(autoincrement())
  nombre           String
  apellido         String
  correo           String
  telefono         String
  direccion        String
  localidad        String
  cuentaVerificada Boolean @default(false)
  pedidos          Pedido[]
}
